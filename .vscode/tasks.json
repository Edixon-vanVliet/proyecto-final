{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "build",
      "command": "gcc",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${workspaceFolder}/main.c",
        "${workspaceFolder}/algebra/algebra.c",
        "${workspaceFolder}/notas/notas.c",
        "${workspaceFolder}/notas/students.c",
        "${workspaceFolder}/tabla/tabla.c",
        "${workspaceFolder}/utils/array.c",
        "${workspaceFolder}/utils/console.c",
        "-o",
        "${workspaceFolder}/main.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}
