{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "build",
      "command": "C:\\MinGW\\bin\\gcc.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${workspaceFolder}\\main.c",
        "${workspaceFolder}\\algebra\\algebra.c",
        "${workspaceFolder}\\notas\\notas.c",
        "${workspaceFolder}\\tabla\\tabla.c",
        "${workspaceFolder}\\utils\\utils.c",
        "-o",
        "${workspaceFolder}\\main.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}
